@using Microsoft.AspNetCore.Identity
@model webapp.Models.Admin.UserEditModel

@inject RoleManager<IdentityRole> RoleManager
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit User";

    var roles = RoleManager.Roles.Select(r => new SelectListItem
            {
                Value = r.Name,
                Text = r.Name
            }).ToList();
}

<div class="row align-items-center p-3">
    <div class="col-auto">
        <h2>
            <a asp-controller="Admin" asp-action="UserList">
                <i class="fas fa-arrow-left"></i>
            </a>
            @ViewData["Title"]
        </h2>
    </div>
</div>

<div class="dashboard-body">
    <div class="dashboard-wraper">
        <form asp-action="EditUser" class="frm_submit_block" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>
            <h3>User Information</h3>
            @* <partial name="_StatusMessage" for="StatusMessage" /> *@
            <div class="frm_submit_wrap">
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="UserName" class="form-label"></label>
                        <input asp-for="UserName" class="form-control" AutoCompleteType="Disabled" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" AutoCompleteType="Disabled" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="SelectedRole" class="form-label"></label>
                        <select asp-for="SelectedRole" class="form-control" asp-items="@roles" id="roleSelect"></select>
                        <span asp-validation-for="SelectedRole" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="frm_submit_block mt-4">
                <h3>Password</h3>
                <div class="frm_submit_wrap">
                    <div class="row">
                        <div class="form-group">
                            <input asp-for="ChangePassword" class="form-check-input" id="changePasswordCheckbox" type="checkbox" />
                            <label asp-for="ChangePassword" class="form-label" for="changePasswordCheckbox"></label>
                            <span asp-validation-for="ChangePassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Password" class="form-label" for="passwordField"></label>
                            <input asp-for="Password" id="passwordField" class="form-control" AutoCompleteType="Disabled" disabled />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="ConfirmPassword" for="confirmPasswordField" class="form-label"></label>
                            <input asp-for="ConfirmPassword" id="confirmPasswordField" class="form-control" disabled />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="frm_submit_block mt-4" id="agentFields" style="display:none;">
                <h3>Agent Information</h3>
                <div class="frm_submit_wrap">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Country" class="form-label"></label>
                            <input asp-for="Country" class="form-control" />
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Address" class="form-label"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        @* <div class="form-group col-md-6">
                            <label asp-for="State" class="form-label"></label>
                            <input asp-for="State" class="form-control" />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div> *@
                        <div class="form-group col-md-6">
                            <label asp-for="State">State</label>
                            @* <input asp-for="Property.State" class="form-control" /> *@
                            <select asp-for="State" class="form-control">
                                <option value="Kuala Lumpur">Kuala Lumpur</option>
                                <option value="Pahang">Pahang</option>
                                <option value="Perak">Perak</option>
                                <option value="Terengganu">Terengganu</option>
                                <option value="Perlis">Perlis</option>
                                <option value="Selangor">Selangor</option>
                                <option value="Negeri Sembilan">Negeri Sembilan</option>
                                <option value="Johor">Johor</option>
                                <option value="Kelantan">Kelantan</option>
                                <option value="Kedah">Kedah</option>
                                <option value="Penang">Penang</option>
                                <option value="Melaka">Melaka</option>
                                <option value="Sabah">Sabah</option>
                                <option value="Sarawak">Sarawak</option>
                            </select>

                            <span class="text-danger" asp-validation-for="State"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="City" class="form-label"></label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Zip" class="form-label"></label>
                            <input asp-for="Zip" class="form-control" />
                            <span asp-validation-for="Zip" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="About" class="form-label"></label>
                            <textarea asp-for="About" class="form-control"></textarea>
                            <span asp-validation-for="About" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group col-lg-12 col-md-12 mt-4">
                <button id="update-profile-button" type="submit" class="btn btn-theme btn-lg">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>

        var agentFields = document.getElementById('agentFields');

        $('#roleSelect').on('change', function () {
            var selectedRole = this.value;
            if (selectedRole === 'Agent') {
                agentFields.style.display = 'block';
            } else {
                agentFields.style.display = 'none';
            }
        });

        $('#roleSelect').val() == 'Agent' ? agentFields.style.display = 'block' : agentFields.style.display = 'none';

        const changePasswordCheckbox = document.getElementById('changePasswordCheckbox');
        const passwordField = document.getElementById('passwordField');
        const confirmPasswordField = document.getElementById('confirmPasswordField');

        changePasswordCheckbox.addEventListener('change', () => {
            const isEnabled = changePasswordCheckbox.checked;
            passwordField.disabled = !isEnabled;
            confirmPasswordField.disabled = !isEnabled;
        });
    </script>
}
