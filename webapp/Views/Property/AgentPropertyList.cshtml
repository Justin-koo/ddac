@{
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="dashboard-body">

	<div class="row">
		<div class="col-lg-12 col-md-12">
			<div class="_prt_filt_dash">
				<div class="_prt_filt_dash_flex">
					<div class="btn-group" role="group" aria-label="Basic radio toggle button group">
						<input type="radio" class="btn-check" name="chooselists" id="alllist" checked>
						<label class="btn btn-md btn-outline-primary font--medium" for="alllist">All</label>

						<input type="radio" class="btn-check" name="chooselists" id="activelist">
						<label class="btn btn-md btn-outline-primary font--medium" for="activelist">Active</label>

						<input type="radio" class="btn-check" name="chooselists" id="expiredlist">
						<label class="btn btn-md btn-outline-primary font--medium" for="expiredlist">Expired</label>

						<input type="radio" class="btn-check" name="chooselists" id="draftlist">
						<label class="btn btn-md btn-outline-primary font--medium" for="draftlist">Draft</label>
					</div>
				</div>
				<div class="_prt_filt_dash_last m2_hide">
					<div class="_prt_filt_radius">
					</div>
					<div class="_prt_filt_add_new">
						<a asp-controller="Property" asp-action="SubmitProperty" class="prt_submit_link"><i class="fas fa-plus-circle"></i><span class="d-none d-lg-block d-md-block">List New Property</span></a>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row g-3 align-items-center mb-3">
		<div class="col-md-auto">
			<select name="propertyTable_length" aria-controls="propertyTable" class="form-control" id="dt-length">
				<option value="5">5</option>
				<option value="10" selected>10</option>
				<option value="25">25</option>
				<option value="50">50</option>
			</select>
		</div>
		<div class="col-md-auto me-auto">
			<label for="dt-length-0"> per page</label>
		</div>

		<div class="col-md-auto ms-auto">
			<input type="search" class="form-control" id="dt-search" placeholder="" aria-controls="propertyTable">
		</div>
	</div>

	<div class="row">
		<div class="col-lg-12 col-md-12">
			<div class="dashboard_property">
				<div class="table-responsive">
					<table class="table" id="propertyTable" width="100%">
						<thead class="thead-dark">
							<tr>
								<th scope="col">Property</th>
								<th scope="col" class="m2_hide">Leads</th>
								<th scope="col" class="m2_hide">Stats</th>
								<th scope="col" class="m2_hide">Posted On</th>
								<th scope="col">Status</th>
								<th scope="col">Action</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var property in Model)
							{
								<tr>
									<td>
										<div class="dash_prt_wrap">
											<div class="dash_prt_thumb">
												<img src="https://via.placeholder.com/1280x880" class="img-fluid" alt="">
											</div>
											<div class="dash_prt_caption">
												<h5>@property.Title</h5>
												<div class="prt_dashb_lot">@property.AddressLine</div>
												<div class="prt_dash_rate"><span>$@property.Price</span></div>
											</div>
										</div>
									</td>
									<td class="m2_hide">
										<div class="prt_leads"><span>27 till now</span></div>
										<div class="prt_leads_list">
											<ul>
												<li><a href="#"><img src="https://via.placeholder.com/650x650" class="img-fluid circle" alt=""></a></li>
												<li><a href="#"><img src="https://via.placeholder.com/650x650" class="img-fluid circle" alt=""></a></li>
												<li><a href="#" class="_leads_name style-1">K</a></li>
												<li><a href="#"><img src="https://via.placeholder.com/650x650" class="img-fluid circle" alt=""></a></li>
												<li><a href="#" class="leades_more">14+</a></li>
											</ul>
										</div>
									</td>
									<td class="m2_hide">
										<div class="_leads_view"><h5 class="up">145</h5></div>
										<div class="_leads_view_title"><span>Total Views</span></div>
									</td>
									<td class="m2_hide">
										<div class="_leads_posted"><h5>@property.ListingDate.ToString("dd MMM - HH:mm")</h5></div>
										<div class="_leads_view_title">
											<span>
												@{
													var daysAgo = (DateTime.Now - property.ListingDate).TotalDays;
													if (daysAgo < 1)
													{
														<text>Less than a day ago</text>
													}
													else
													{
														<text>@((int)daysAgo) Days ago</text>
													}
												}
											</span>
										</div>
									</td>
									<td>
										<div class="_leads_status"><span class="active">Active</span></div>
										<div class="_leads_view_title"><span>Till 12 Oct</span></div>
									</td>
									<td>
										<div class="_leads_action">
											<a href="#"><i class="fas fa-edit"></i></a>
											<a href="#"><i class="fas fa-trash"></i></a>
										</div>
									</td>
								</tr>
							}

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
	
	<div class="row align-items-center">
		<div class="col-md-auto me-auto">
			<div id="tableInfo"></div>
		</div>

		<div class="col-md-auto">
			<nav aria-label="Page navigation">
				<ul class="pagination" id="tablePaginate">
					<li class="page-item"><a class="page-link" href="#" id="prevPage">«</a></li>
					<li class="page-item"><a class="page-link" href="#" id="nextPage">»</a></li>
				</ul>
			</nav>
		</div>
	</div>
	<!-- row -->


</div>

@section Scripts {
	<script>
		let table = new DataTable('#propertyTable', {
			order: [[3, 'desc']],
			layout: null,
			columnDefs: [
				{
					orderable: false,
					searchable: false,
					targets: -1,
				},
				{
					orderSequence: ['asc', 'desc'],
					targets: "_all"
				}
			]
		});

		$('#dt-length').on('change', function () {
			table.page.len(this.value).draw();
			updateTableInfo();
			updatePagination();
		});

		$('#dt-search').on('keyup', function () {
			table.search(this.value).draw();
		});

		function updateTableInfo() {
			var info = table.page.info();
			$('#tableInfo').html(
				'Currently showing page ' + (info.page + 1) + ' of ' + info.pages + ' pages'
			);
		}

		function updatePagination() {
			var info = table.page.info();
			var pages = [];
			for (var i = 0; i < info.pages; i++) {
				pages.push('<li class="page-item ' + (info.page === i ? 'active' : '') + '"><a class="page-link" href="#">' + (i + 1) + '</a></li>');
			}
			$('#tablePaginate').html('<li class="page-item"><a class="page-link" href="#" id="prevPage">«</a></li>' + pages.join('') + '<li class="page-item"><a class="page-link" href="#" id="nextPage">»</a></li>');

			$('#prevPage').on('click', function () {
				if (info.page > 0) {
					table.page('previous').draw('page');
					updateTableInfo();
					updatePagination();
				}
			});

			$('#nextPage').on('click', function () {
				if (info.page < info.pages - 1) {
					table.page('next').draw('page');
					updateTableInfo();
					updatePagination();
				}
			});

			$('#tablePaginate .page-link').on('click', function (e) {
				e.preventDefault();
				var pageNum = parseInt($(this).text()) - 1;
				if (!isNaN(pageNum)) {
					table.page(pageNum).draw('page');
					updateTableInfo();
					updatePagination();
				}
			});
		}

		updateTableInfo();
		updatePagination();
		
	</script>
}