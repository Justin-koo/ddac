@section Scripts{
	<script>
		$(document).ready(function () {
			$('.savePropertyForm').on('submit', function (e) {
				e.preventDefault();

				var form = $(this);
				var propertyId = form.data('property-id');

				$.ajax({
					url: '@Url.Action("SaveProperty", "User")',
					type: 'POST',
					data: form.serialize(),
					success: function (response) {
						if (response.success) {
							Swal.fire({
								icon: 'success',
								title: 'Success',
								text: response.message,
								showConfirmButton: false,
								timer: 1500
							}).then(() => {
								location.reload();
							});
						} else {
							Swal.fire({
								icon: 'error',
								title: 'Error',
								text: response.message,
								showConfirmButton: false,
								timer: 1500
							}).then(() => {
								location.reload();
							});
						}
					},
					error: function () {
						Swal.fire({
							icon: 'error',
							title: 'Error',
							text: 'An error occurred while processing your request.',
							showConfirmButton: false,
							timer: 1500
						}).then(() => {
							location.reload();
						});
					}
				});
			});

			$('.unsave-property-form').submit(function (event) {
				event.preventDefault(); // Prevent the form from submitting via the browser.

				var form = $(this);
				var url = form.attr('action');
				var method = form.attr('method');
				var token = $('input[name="__RequestVerificationToken"]', form).val(); // Get the anti-forgery token

				$.ajax({
					url: url,
					type: method,
					data: form.serialize(),
					success: function (response) {
						if (response.success) {
							Swal.fire({
								icon: 'success',
								title: 'Success',
								text: response.message,
								showConfirmButton: false,
								timer: 1500
							}).then(() => {
								// form.find('button').attr('disabled', 'disabled');
								location.reload();
							});
						} else {
							Swal.fire({
								icon: 'error',
								title: 'Error',
								text: response.message,
								showConfirmButton: false,
								timer: 1500
							});
						}
					},
					error: function () {
						Swal.fire({
							icon: 'error',
							title: 'Error',
							text: 'An error occurred while processing your request.',
							showConfirmButton: false,
							timer: 1500
						});
					}
				});
			});
		});
	</script>
